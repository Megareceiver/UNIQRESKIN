table.dashboard tbody::-webkit-scrollbar {
	width: 5px;
}

body::-webkit-scrollbar-track {
	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
	border-radius: 10px;
}

body::-webkit-scrollbar-thumb {
  background-color: darkgrey;
  outline: 1px solid slategrey;
}

/*
 * Dashboard
 */
.dashboard_item {
	border: 1px solid #ddd;
	/*
	min-height: 390px;
	*/
	margin: 15px 0;
}
.dashboard_item h3 {
	background-color: #ededed;
	margin: 0;
	padding: 10px 5px;
	color: #3eb34e;
}

.dashboard_item .google-visualization-table-table {
	width: 100%;
}

/*
 *
 */
.group_border {
	background: #f5f5f5 none repeat scroll 0 0;
    border: 1px solid #ddd;
}

.row select,
.row input[type=text] {
	height: 29px;
}
.row .inputdate input[type=text] {
	height: 22px;
}

.form-group2 > span:FIRST-CHILD {
	padding-left: 10px;
}
.form-group2 > span:FIRST-CHILD:AFTER {
	content: ':'

}

table .table_header1,
table .table_header1 td {
	font-weight: bold;
	background-color: #6495ED;
	color: #fff;
	font-size: 108%;
}
table .table_header2,
table .table_header2 td {
	font-weight: bold;
	background-color: #ABC3EE;
	color: #fff;
}
.note_lostdata {
	background-color: red;
	display: inline-block;
	height: 5px;
	margin-left: 3px;
	position: absolute;
	width: 5px;
	margin-top: 5px;
	border-radius: 5px;
}
