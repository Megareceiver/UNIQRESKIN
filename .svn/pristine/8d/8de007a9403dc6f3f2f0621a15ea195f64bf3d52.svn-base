.shortcut_key {
	height: 24px;
	> span {
		display: inline-block;
		position: relative;
		top: 2px;
		color: #fcfcfc;
		font-size: 80%;
	}
	kbd {
	    display: inline-block;
	    padding: 3px 5px;
	    line-height: 10px;
	    color: #555;
	    vertical-align: middle;
	    background-color: #fcfcfc;
	    border: solid 1px #ccc;
	    border-bottom-color: #bbb;
	    border-radius: 3px;
	    box-shadow: inset 0 -1px 0 #bbb;
	}
}

